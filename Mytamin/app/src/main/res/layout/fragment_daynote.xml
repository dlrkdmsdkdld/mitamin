<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.myday.DaynoteFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/daynote_state"
        android:textSize="24sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:id="@+id/daynote_title"
        android:fontFamily="@font/appmainfont_bold"
        android:includeFontPadding="false"
        />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/daynote_title"
            android:id="@+id/daynote_no_layout"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_x_box"
                android:layout_marginTop="40dp"
                android:id="@+id/wishlist_title_no_image"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/wishlist_title_no_image"
                android:text="@string/daynote_no_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:id="@+id/wishlist_no_title"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/appmainfont_bold"
                android:includeFontPadding="false"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wishlist_no_subtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wishlist_no_title"
                android:text="@string/daynote_no_subtitle"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/appmainfont_medium"
                android:includeFontPadding="false"

                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="107dp"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/wishlist_no_subtitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/wishlist_no_btn"
                android:textColor="@color/background_white"
                android:background="@drawable/ic_large_button_abled"
                android:fontFamily="@font/appmainfont_bold"
                android:includeFontPadding="false"
                android:id="@+id/daynote_no_btn"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toBottomOf="@+id/daynote_title"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/daynote_recyclerview"
        tools:listitem="@layout/daynote_parent_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />


</androidx.constraintlayout.widget.ConstraintLayout>