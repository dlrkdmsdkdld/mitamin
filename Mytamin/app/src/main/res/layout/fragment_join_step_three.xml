<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="three"
    tools:context=".fragment.join.joinStepThreeFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join_step_three_title"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="36dp"
        android:id="@+id/join_step_three_title"
        android:fontFamily="@font/appmainfont_bold"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/join_step_three_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:text="@string/join_step_three_subtitle"
        android:textSize="12sp"
        android:id="@+id/join_step_three_text"
        android:fontFamily="@font/appmainfont_medium"
        android:includeFontPadding="false"
        android:textColor="@color/subGray"

        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/join_step_three_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/join_step_three_text"
        app:boxBackgroundColor="@color/background_white"
        app:boxStrokeColor="@color/text_input_selector"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:helperTextTextColor="@color/primary"
        app:hintTextColor="@drawable/hint_focus_selector"

        app:errorTextColor="@color/textRed"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:hint="공백없이 9자 이내로 입력해주세요"

        app:endIconMode="clear_text"
        >
        <!--        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
        <!--        app:boxStrokeColor="@color/textinputlayout_boxstroke"-->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/join_step_three_name_text"
            />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>