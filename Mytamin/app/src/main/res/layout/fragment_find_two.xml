<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.find.FindTwoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/find_top_layout_other"
        android:visibility="gone"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:padding="10dp"
            android:background="@drawable/icon_arraow_left_small_black"
            android:id="@+id/find_back_btn_other"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/find_title"
            android:textColor="@color/black"
            android:fontFamily="@font/appmainfont_medium"
            android:includeFontPadding="false"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/find_top_layout_other"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/find_2_title"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:textSize="24sp"
        android:fontFamily="@font/appmainfont_bold"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:id="@+id/find_two_title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/find_two_title"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/find_2_password"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:textSize="12sp"
        android:textColor="@color/subGray"
        android:fontFamily="@font/appmainfont_medium"
        android:includeFontPadding="false"
        android:id="@+id/find_two_subtitle"
        />

       <EditText
           android:layout_marginTop="20dp"
           android:layout_width="0dp"
            android:layout_height="0dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toStartOf="@+id/find_password_btn"
            app:layout_constraintTop_toBottomOf="@+id/find_two_subtitle"
           app:layout_constraintBottom_toTopOf="@+id/line1"
            android:inputType="textPassword"
           android:background="@null"
           android:singleLine="true"
           android:layout_marginLeft="20dp"
           android:textSize="14dp"
           android:fontFamily="@font/appsubfont_r"
           android:includeFontPadding="false"
           android:gravity="top"
           android:hint="@string/find_2_password_hint"
            android:id="@+id/find_two_one_password_text"
            />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/find_two_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_eye_off"
        android:layout_marginRight="20dp"

        android:layout_marginTop="20dp"
        android:id="@+id/find_password_btn"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/LineColorFat"
        app:layout_constraintTop_toBottomOf="@+id/find_password_btn"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/appsubfont_r"
        android:includeFontPadding="false"
        android:textSize="14dp"
        android:id="@+id/find_two_password_layout"
          />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/find_two_password_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/join_step_password_title2"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:textSize="12sp"
        android:textColor="@color/subGray"
        android:fontFamily="@font/appmainfont_medium"
        android:includeFontPadding="false"
        android:id="@+id/find_two_subtitle2"
        />
     <EditText
         android:layout_marginTop="20dp"
         android:layout_width="0dp"
         android:layout_height="0dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toStartOf="@+id/find_password_btn"
         app:layout_constraintTop_toBottomOf="@+id/find_two_subtitle2"
         app:layout_constraintBottom_toTopOf="@+id/line2"
         android:inputType="textPassword"
         android:background="@null"
         android:singleLine="true"
         android:layout_marginLeft="20dp"
         android:textSize="14dp"
         android:fontFamily="@font/appsubfont_r"
         android:includeFontPadding="false"
         android:gravity="top"
         android:hint="@string/find_2_password_hint2"
         android:id="@+id/find_two_password_confirm_text"
            />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/find_two_subtitle2"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_eye_off"
        android:layout_marginRight="20dp"

        android:layout_marginTop="20dp"
        android:id="@+id/find_repassword_btn"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/LineColorFat"
        app:layout_constraintTop_toBottomOf="@+id/find_repassword_btn"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/appsubfont_r"
        android:includeFontPadding="false"
        android:layout_marginTop="12dp"
        android:id="@+id/find_two_password_confirm_layout"
        android:textSize="14dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/find_complete_btn_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/appmainfont_medium"
        android:includeFontPadding="false"
        android:text="@string/next_talk"
        android:textSize="16dp"
        android:enabled="false"
        android:visibility="gone"
        android:textColor="@color/background_white"
        android:background="@drawable/round_layout_selector_orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>