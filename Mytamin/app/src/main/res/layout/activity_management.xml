<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ManagementActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/icon_arraow_left_small_black"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:id="@+id/management_back_btn"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/management_title"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/appmainfont_medium"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/management_back_btn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/appsubfont_r"
            android:includeFontPadding="false"
            android:text="@string/management_email"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/management_back_btn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/appsubfont_r"
            android:includeFontPadding="false"
            android:id="@+id/management_email_text"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/management_email_text"
        app:layout_constraintStart_toStartOf="parent"
        android:text="카카오톡 회원"
        android:textSize="12sp"
        android:fontFamily="@font/appmainfont_medium"
        android:includeFontPadding="false"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:textColor="@color/darkGray"
        android:id="@+id/management_type_text"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/management_type_text"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/round_layout_stroke_primary"
        android:text="@string/management_init"
        android:textColor="@color/primary"
        android:textSize="16sp"
        android:fontFamily="@font/appmainfont_bold"
        android:includeFontPadding="false"
        android:id="@+id/management_init_btn"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@+id/management_init_btn"
        android:layout_marginTop="24dp"
        android:background="@color/line_gray"
        android:id="@+id/management_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/management_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/appsubfont_r"
        android:includeFontPadding="false"
        android:text="@string/management_logout"
        android:id="@+id/management_logout_btn"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/management_logout_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/appsubfont_r"
        android:includeFontPadding="false"
        android:text="@string/management_exit"
        android:id="@+id/management_withdrawal_btn"
        />
</androidx.constraintlayout.widget.ConstraintLayout>