<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment"
    android:fillViewport="true"
    android:gravity="center">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
      <ImageButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/ic_mitamin_logo_title"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="17dp"
          android:id="@+id/history_title"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/history_title"
          app:layout_constraintStart_toStartOf="parent"
          android:id="@+id/history_praise_title"
          android:text="@string/history_praise_title"
          android:fontFamily="@font/appmainfont_bold"
          android:includeFontPadding="false"
          android:textColor="@color/black"
          android:textSize="18sp"
          android:layout_marginTop="37dp"
          android:layout_marginLeft="19dp"
          />
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/history_praise_title"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="16dp"
          app:cardElevation="10dp"
          app:cardCornerRadius="12dp"
          android:minHeight="188dp"
          android:id="@+id/history_card"
          >
         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/history_random_care1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:textSize="16sp"
                android:fontFamily="@font/appmainfont_medium"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:text="@string/history_praise_x"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:fontFamily="@font/appmainfont_medium"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/history_random_care1"
                android:id="@+id/history_random_care2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/history_random_care2"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="12sp"
                android:fontFamily="@font/appsubfont_r"
                android:includeFontPadding="false"
                android:id="@+id/history_radom_take"
                />
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"
                android:padding="15dp"
                android:id="@+id/history_refresh_btn"
                android:background="@drawable/ic_icon_refresh_mono"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/history_radom_take"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/background_white"
                android:layout_marginTop="24dp"
                android:textSize="16dp"
                android:id="@+id/history_care_btn"
                android:fontFamily="@font/appmainfont_bold"
                android:includeFontPadding="false"
                android:text="@string/history_praise_btn"
                android:background="@drawable/round_layout_background_orange"
                />

         </androidx.constraintlayout.widget.ConstraintLayout>

      </androidx.cardview.widget.CardView>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/history_card"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginLeft="19dp"
          android:layout_marginTop="40dp"
          android:textSize="18sp"
          android:textColor="@color/black"
          android:fontFamily="@font/appmainfont_bold"
          android:includeFontPadding="false"
          android:text="@string/history_care_title"
          android:id="@+id/history_report_title"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/history_report_title"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginLeft="19dp"
          android:layout_marginTop="24dp"
          android:textSize="16sp"
          android:textColor="@color/black"
          android:fontFamily="@font/appmainfont_medium"
          android:includeFontPadding="false"
          android:text="@string/history_care_subtitle"
          android:id="@+id/history_report_subtitle"
          />
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="140dp"
          app:layout_constraintTop_toBottomOf="@+id/history_report_subtitle"
          android:layout_marginTop="16dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:id="@+id/history_report_layout"
          android:background="@drawable/round_layout_stroke_gray"
          >
         <com.github.mikephil.charting.charts.LineChart
             android:layout_width="match_parent"
             android:layout_height="140dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             android:id="@+id/history_chart"
             />


      </androidx.constraintlayout.widget.ConstraintLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/history_report_layout"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginTop="40dp"
          android:layout_marginLeft="19dp"
          android:textSize="16sp"
          android:textColor="@color/black"
          android:fontFamily="@font/appmainfont_medium"
          android:includeFontPadding="false"
          android:text="@string/history_history_title"
          android:id="@+id/history_most_title"
          />
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_marginTop="16dp"
          android:layout_marginRight="20dp"
          android:layout_marginLeft="20dp"
          app:layout_constraintTop_toBottomOf="@+id/history_most_title"
          android:id="@+id/history_most1_layout"
          android:background="@drawable/round_layout_stroke_gray"
          >
         <ImageButton
             android:layout_width="24dp"
             android:layout_height="24dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             android:background="@drawable/ic_frame_circle_one_yellow"
             android:layout_marginLeft="16dp"
             app:layout_constraintBottom_toBottomOf="parent"
             android:id="@+id/history_most1_image"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintStart_toEndOf="@+id/history_most1_image"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:id="@+id/history_most1_status"
             android:textColor="@color/black"
             android:layout_marginLeft="8dp"
             android:textSize="16dp"
             android:fontFamily="@font/appmainfont_medium"
             android:includeFontPadding="false"

             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:layout_marginRight="16dp"
             android:textColor="@color/primary"
             android:textSize="16dp"
             android:fontFamily="@font/appmainfont_medium"
             android:includeFontPadding="false"
             android:id="@+id/history_most1_count"

             />
      </androidx.constraintlayout.widget.ConstraintLayout>
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_marginTop="12dp"
          android:layout_marginRight="20dp"
          android:layout_marginLeft="20dp"
          app:layout_constraintTop_toBottomOf="@+id/history_most1_layout"
          android:id="@+id/history_most2_layout"
          android:background="@drawable/round_layout_stroke_gray"
          >
         <ImageButton
             android:layout_width="24dp"
             android:layout_height="24dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             android:background="@drawable/ic_frame_circle_yellow_two"
             android:layout_marginLeft="16dp"
             app:layout_constraintBottom_toBottomOf="parent"
             android:id="@+id/history_most2_image"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintStart_toEndOf="@+id/history_most2_image"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:id="@+id/history_most2_status"
             android:textColor="@color/black"
             android:layout_marginLeft="8dp"
             android:textSize="16dp"
             android:fontFamily="@font/appmainfont_medium"
             android:includeFontPadding="false"

             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:layout_marginRight="16dp"
             android:textColor="@color/primary"
             android:textSize="16dp"
             android:fontFamily="@font/appmainfont_medium"
             android:includeFontPadding="false"
             android:id="@+id/history_most2_count"

             />
      </androidx.constraintlayout.widget.ConstraintLayout>
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_marginTop="12dp"
          android:layout_marginRight="20dp"
          android:layout_marginLeft="20dp"
          app:layout_constraintTop_toBottomOf="@+id/history_most2_layout"
          android:id="@+id/history_most3_layout"
          android:background="@drawable/round_layout_stroke_gray"
          >
         <ImageButton
             android:layout_width="24dp"
             android:layout_height="24dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             android:background="@drawable/ic_frame_circle_three_yellow"
             android:layout_marginLeft="16dp"
             app:layout_constraintBottom_toBottomOf="parent"
             android:id="@+id/history_most3_image"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintStart_toEndOf="@+id/history_most3_image"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:id="@+id/history_most3_status"
             android:textColor="@color/black"
             android:layout_marginLeft="8dp"
             android:textSize="16dp"
             android:fontFamily="@font/appmainfont_medium"
             android:includeFontPadding="false"

             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:layout_marginRight="16dp"
             android:textColor="@color/primary"
             android:textSize="16dp"
             android:fontFamily="@font/appmainfont_medium"
             android:includeFontPadding="false"
             android:id="@+id/history_most3_count"

             />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/history_most3_layout"
          app:layout_constraintStart_toStartOf="parent"
          android:text="@string/history_calendar_title"
          android:layout_marginLeft="19dp"
          android:layout_marginTop="40dp"
          android:textSize="18sp"
          android:fontFamily="@font/appmainfont_bold"
          android:includeFontPadding="false"
          android:textColor="@color/black"
          android:id="@+id/history_month_title"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/history_month_title"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:id="@+id/history_month_text"
          android:text="10ì›”"
          android:textColor="@color/black"
          android:textSize="16sp"
          android:layout_marginTop="24dp"
          android:fontFamily="@font/appmainfont_medium"
          android:includeFontPadding="false"

          />
      <ImageButton
          android:layout_width="24dp"
          android:layout_height="24dp"
          app:layout_constraintTop_toBottomOf="@+id/history_month_title"
          app:layout_constraintEnd_toStartOf="@+id/history_month_text"
          android:layout_marginRight="24dp"
          android:layout_marginTop="24dp"
          android:background="@drawable/ic_icon_arrow_left_circle_gray"
          android:id="@+id/history_previous_btn"
          />
      <ImageButton
          android:layout_width="24dp"
          android:layout_height="24dp"
          app:layout_constraintTop_toBottomOf="@+id/history_month_title"
          android:layout_marginTop="24dp"
          app:layout_constraintStart_toEndOf="@+id/history_month_text"
          android:layout_marginLeft="24dp"
          android:background="@drawable/ic_icon_arrow_right_circle_gray"
          android:id="@+id/history_next_btn"
          />

      <com.haibin.calendarview.CalendarView
          android:id="@+id/cv_calendar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
         app:layout_constraintTop_toBottomOf="@+id/history_next_btn"
          android:paddingBottom="10dp"
          android:layout_marginTop="20dp"
          
          android:layout_marginRight="15dp"
          android:layout_marginLeft="15dp"
          app:month_view="kr.ac.kpu.ce2017154024.mytamin.UI.CustomMonthView"
          />
   </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>