<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.find.FindOneFragment">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_1_title"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:fontFamily="@font/appmainfont_bold"
        android:includeFontPadding="false"
        android:id="@+id/find_one_title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/find_one_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:text="@string/find_1_email"
        android:textSize="12sp"
        android:textColor="@color/subGray"
        android:fontFamily="@font/appmainfont_medium"
        android:includeFontPadding="false"
        android:id="@+id/find_one_subtitle"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/find_one_email_btn"
        app:layout_constraintTop_toBottomOf="@+id/find_one_subtitle"
        app:layout_constraintBottom_toTopOf="@+id/find_one_line1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/find_one_email_text"
        android:textSize="14dp"
        android:fontFamily="@font/appsubfont_r"
        android:includeFontPadding="false"
        android:background="@color/background_white"
        android:hint="@string/find_1_email_hint"
        android:gravity="left|top"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="63dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/find_one_subtitle"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_layout_stroke_primary"
        android:text="@string/find_1_email_btn"
        android:textColor="@color/primary"
        android:textSize="12dp"
        android:layout_marginRight="20dp"
        android:id="@+id/find_one_email_btn"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/find_one_email_btn"
        android:background="@color/LineColorFat"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:id="@+id/find_one_line1"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/find_one_timer"
        app:layout_constraintTop_toBottomOf="@+id/find_one_line1"
        app:layout_constraintBottom_toTopOf="@+id/find_one_line2"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/find_one_email_code"
        android:textSize="14dp"
        android:fontFamily="@font/appsubfont_r"
        android:includeFontPadding="false"
        android:background="@color/background_white"
        android:hint="@string/find_1_code"
        android:gravity="left|top"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="63dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/find_one_line1"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_layout_stroke_seletor_primary"
        android:text="@string/find_1_code_btn"
        android:textColor="@color/primary"
        android:textSize="12dp"
        android:layout_marginRight="20dp"
        android:enabled="false"
        android:id="@+id/find_one_code_btn"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/find_one_code_btn"
        app:layout_constraintTop_toBottomOf="@+id/find_one_line1"
        android:layout_marginTop="45dp"
        android:layout_marginRight="12dp"
        android:fontFamily="@font/appsubfont_r"
        android:includeFontPadding="false"
        android:textSize="12dp"
        android:id="@+id/find_one_timer"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/find_one_code_btn"
        android:background="@color/LineColorFat"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:id="@+id/find_one_line2"
        />



</androidx.constraintlayout.widget.ConstraintLayout>