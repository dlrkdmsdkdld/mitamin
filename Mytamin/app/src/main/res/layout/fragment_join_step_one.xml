<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="one"
    tools:context=".fragment.join.joinStepOneFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join_step_one_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="36dp"
        android:id="@+id/join_step_one_title"
        android:fontFamily="@font/appmainfont_bold"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="24sp"

        />

    <TextView
        android:id="@+id/join_step_one_email_title"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/appmainfont_medium"
        android:includeFontPadding="false"
        android:text="@string/join_step_email_title"
        android:textColor="@color/subGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_step_one_title" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/join_one_email_btn"
        app:layout_constraintTop_toBottomOf="@+id/join_step_one_email_title"
        app:layout_constraintBottom_toTopOf="@+id/join_one_line1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/join_step_one_email_text"
        android:textSize="14dp"
        android:fontFamily="@font/appsubfont_r"
        android:includeFontPadding="false"
        android:background="@null"
        android:hint="@string/find_1_email_hint"
        android:paddingLeft="10dp"

        android:gravity="left|top"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="63dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_step_one_email_title"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_layout_stroke_seletor_primary"
        android:text="@string/find_1_email_btn"
        android:textColor="@color/primary"
        android:textSize="12dp"
        android:layout_marginRight="20dp"
        android:visibility="visible"
        android:id="@+id/join_one_email_btn"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_step_one_email_title"
        android:layout_marginRight="33dp"
        android:layout_marginTop="25dp"
        android:visibility="gone"
        android:id="@+id/join_one_email_ok"
        android:src="@drawable/ic_icon_check_circle_line_mono"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/join_one_email_btn"
        android:background="@color/LineColorFat"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:id="@+id/join_one_line1"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/join_one_line1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/appmainfont_medium"
        android:includeFontPadding="false"
        android:textSize="12sp"
        android:id="@+id/join_one_helperemail"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/join_step_one_email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/join_one_code_layout"
        android:visibility="gone"
        >
        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/find_one_timer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/find_one_line2"
            android:layout_marginLeft="20dp"
            android:id="@+id/find_one_email_code"
            android:textSize="14dp"
            android:fontFamily="@font/appsubfont_r"
            android:includeFontPadding="false"
            android:background="@color/background_white"
            android:hint="@string/find_1_code"
            android:gravity="left|top"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="63dp"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/round_layout_stroke_seletor_primary"
            android:text="@string/find_1_code_btn"
            android:textColor="@color/primary"
            android:textSize="12dp"
            android:layout_marginRight="20dp"
            android:enabled="true"

            android:id="@+id/find_one_code_btn"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/find_one_code_btn"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/appsubfont_r"
            android:includeFontPadding="false"
            android:textSize="12dp"
            android:id="@+id/find_one_timer"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/find_one_code_btn"
            android:background="@color/LineColorFat"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:id="@+id/find_one_line2"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/join_step_one_email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/join_step_one_password_layout_all"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join_step_password_title"
        android:textColor="@color/subGray"
        android:textSize="12sp"
        android:fontFamily="@font/appmainfont_medium"
        app:layout_constraintTop_toTopOf="parent"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/join_step_one_password_title"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/join_step_one_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/join_step_one_password_title"
        app:boxBackgroundColor="@color/transparent"
        android:layout_marginLeft="20dp"
        app:endIconCheckable="true"
        app:hintTextColor="@drawable/hint_focus_selector"
        app:boxStrokeColor="@color/text_input_selector"
        app:helperTextTextColor="@color/primary"
        android:hint="@string/join_step_password_hint"
        android:layout_marginRight="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        app:endIconMode="password_toggle"

        >
        <!--        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
        <!--        app:boxStrokeColor="@color/textinputlayout_boxstroke"-->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@drawable/hint_focus_selector"
            android:inputType="textPassword"
            android:textSize="14dp"

            android:id="@+id/join_step_one_password_text"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join_step_password_title2"
        android:textColor="@color/subGray"
        android:textSize="12sp"
        android:fontFamily="@font/appmainfont_medium"
        android:includeFontPadding="false"

        app:layout_constraintTop_toBottomOf="@+id/join_step_one_password_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/join_step_one_password_confirm_title"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/join_step_one_password_confirm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/join_step_one_password_confirm_title"

        app:boxBackgroundColor="@color/background_white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        app:boxStrokeColor="@color/text_input_selector"
        app:endIconMode="password_toggle"
        app:helperTextTextColor="@color/primary"
        app:hintTextColor="@drawable/hint_focus_selector"
        app:endIconCheckable="true"
        android:hint="@string/join_step_password_hint2"
        android:gravity="left"

        >

        <!--        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
        <!--        app:boxStrokeColor="@color/textinputlayout_boxstroke"-->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/join_step_one_password_confirm_text"
            android:inputType="textPassword"
            android:textSize="14dp"
            />

    </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>