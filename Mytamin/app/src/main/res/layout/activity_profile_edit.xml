<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileEditActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/user_edit_title"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/appmainfont_medium"
        android:includeFontPadding="false"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/icon_arraow_left_small_black"
        android:id="@+id/profile_edit_backbtn"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_backbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/profile_edit_image"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/ic_photo_black"
        app:layout_constraintEnd_toEndOf="@+id/profile_edit_image"
        app:layout_constraintBottom_toBottomOf="@+id/profile_edit_image"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_image"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/user_myday_nickname"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:id="@+id/profile_edit_nickname_title"
        android:fontFamily="@font/appsubfont_r"
        android:includeFontPadding="false"
        android:textColor="@color/darkGray"
        android:textSize="12sp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profile_edit_nickname_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_nickname_title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        style="@style/TextInputLayoutStyle2"
        app:endIconMode="clear_text"
        >
        <!--        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
        <!--        app:boxStrokeColor="@color/textinputlayout_boxstroke"-->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_edit_nickname_text"
            android:textColor="@color/realblack"
            android:gravity="left|center"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_nickname_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/user_myday_tobe"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/profile_edit_tobe_title"
        android:fontFamily="@font/appsubfont_r"
        android:includeFontPadding="false"
        android:textColor="@color/darkGray"
        android:textSize="12sp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profile_edit_tobe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_tobe_title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="8dp"
        style="@style/TextInputLayoutStyle2"
        app:endIconMode="clear_text"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        >
        <!--        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
        <!--        app:boxStrokeColor="@color/textinputlayout_boxstroke"-->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_edit_tobe_text"
            android:gravity="left|center"
            android:textColor="@color/realblack"
            android:background="@null"

            />

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_myday_tobe_sub"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_tobe_title"
        app:layout_constraintStart_toEndOf="@+id/profile_edit_tobe_layout"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/black"
        android:fontFamily="@font/appmainfont_medium"
        android:textSize="16sp"
        android:includeFontPadding="false"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_layout_background_orange"
        android:text="@string/complete"
        android:textSize="16sp"
        android:fontFamily="@font/appmainfont_medium"
        android:includeFontPadding="false"
        android:textColor="@color/background_white"
        android:id="@+id/profile_edit_completebtn"
        />

</androidx.constraintlayout.widget.ConstraintLayout>