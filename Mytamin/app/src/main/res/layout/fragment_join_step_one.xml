<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="one"
    tools:context=".fragment.join.joinStepOneFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join_step_one_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="36dp"
        android:id="@+id/join_step_one_title"
        android:fontFamily="@font/appmainfont_bold"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="24sp"

        />

    <TextView
        android:id="@+id/join_step_one_email_title"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/appmainfont_medium"
        android:includeFontPadding="false"
        android:text="@string/join_step_email_title"
        android:textColor="@color/subGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_step_one_title" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/join_step_one_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/join_step_one_email_title"
        app:boxBackgroundColor="@color/background_white"
        android:layout_marginLeft="20dp"
        app:helperTextTextColor="@color/primary"
        android:layout_marginRight="20dp"
        android:hint="@string/join_step_email_hint"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        app:endIconCheckable="true"
        app:endIconMode="custom"
        >
<!--        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
<!--        app:boxStrokeColor="@color/textinputlayout_boxstroke"-->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/join_step_one_email_text"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join_step_password_title"
        android:textColor="@color/subGray"
        android:textSize="12sp"
        android:fontFamily="@font/appmainfont_medium"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/join_step_one_email_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/join_step_one_password_title"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/join_step_one_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/join_step_one_password_title"
        app:boxBackgroundColor="@color/background_white"
        android:layout_marginLeft="20dp"
        app:endIconCheckable="true"

        app:helperTextTextColor="@color/primary"
        android:layout_marginRight="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        app:endIconMode="password_toggle"
        >
        <!--        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
        <!--        app:boxStrokeColor="@color/textinputlayout_boxstroke"-->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/join_step_password_hint"

            android:inputType="textPassword"
            android:id="@+id/join_step_one_password_text"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join_step_password_title2"
        android:textColor="@color/subGray"
        android:textSize="12sp"
        android:fontFamily="@font/appmainfont_medium"
        android:includeFontPadding="false"

        app:layout_constraintTop_toBottomOf="@+id/join_step_one_password_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/join_step_one_password_confirm_title"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/join_step_one_password_confirm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/join_step_one_password_confirm_title"

        app:boxBackgroundColor="@color/background_white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        app:endIconMode="password_toggle"
        app:helperTextTextColor="@color/primary"
        app:endIconCheckable="true"
        android:hint="@string/join_step_password_hint2"
        >

        <!--        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
        <!--        app:boxStrokeColor="@color/textinputlayout_boxstroke"-->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/join_step_one_password_confirm_text"
            android:inputType="textPassword"

            />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>