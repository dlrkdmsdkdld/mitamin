<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/round_layout_card_gray"
    android:layout_marginTop="12dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        android:id="@+id/care_child_msg1"
        android:fontFamily="@font/appsubfont_r"
        android:includeFontPadding="false"
        android:layout_marginTop="16dp"
        android:textSize="14dp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/care_child_msg1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        android:id="@+id/care_child_msg2"
        android:fontFamily="@font/appsubfont_r"
        android:includeFontPadding="false"
        android:textSize="14dp"
        android:textColor="@color/black"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/care_child_msg2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        android:id="@+id/care_child_category"
        android:fontFamily="@font/appsubfont_r"
        android:includeFontPadding="false"
        android:textSize="12dp"
        android:textColor="@color/cardtext"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/care_child_category"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        android:id="@+id/care_child_take"
        android:fontFamily="@font/appsubfont_r"
        android:includeFontPadding="false"
        android:textSize="12dp"
        android:textColor="@color/cardtext"
        android:layout_marginTop="16dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>