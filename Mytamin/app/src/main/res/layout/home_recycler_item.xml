<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="186dp"
    android:layout_height="140dp"
    android:background="@drawable/round_layout_background"
    android:layout_marginRight="12dp"
    app:cardCornerRadius="12dp"
    android:elevation="10dp"
    android:id="@+id/home_item_card"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="118dp"
            android:layout_height="101dp"
            android:src="@drawable/ic_step_two_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp"
            android:id="@+id/home_item_step_image"
            />
        <TextView

            android:id="@+id/home_item_step_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/appmainfont_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="12dp"
            android:textColor="@color/primary"
            android:includeFontPadding="false"
            android:layout_marginTop="16dp"
            android:text="1"
            />

        <TextView

            android:id="@+id/home_item_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/appmainfont_medium"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/home_item_step_text"
            android:textColor="@color/black"
            android:includeFontPadding="false"
            android:text="숨고르기"
            android:layout_marginLeft="8dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="162dp"
            android:layout_height="40dp"
            android:id="@+id/home_item_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/ic_home_btn"
            android:layout_margin="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:padding="10dp"
            android:textSize="16dp"
            android:text="@string/home_start"
            android:fontFamily="@font/appmainfont_bold"
            android:includeFontPadding="false"
            android:textColor="@color/background_white"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>