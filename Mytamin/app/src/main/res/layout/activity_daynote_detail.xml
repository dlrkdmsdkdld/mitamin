<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DaynoteDetailActivity">

    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/icon_arraow_left_small_black"
        android:padding="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/detail_back_btn"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="17dp"
        android:text="@string/detail_title"

        android:textSize="16sp"
        android:fontFamily="@font/appmainfont_medium"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        />
    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_icon_more_dot"
        android:padding="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="13dp"
        android:id="@+id/detail_more_btn"
        />
    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="360dp"

        app:layout_constraintTop_toBottomOf="@+id/detail_more_btn"
        android:layout_marginTop="13dp"
        android:id="@+id/detail_viewPager"
        />
    <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/detail_viewPager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        app:dotsColor="@color/primary"
        android:id="@+id/detail_indicator"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/detail_indicator"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="20dp"
        android:textSize="12sp"
        android:textColor="@color/subGray"
        android:fontFamily="@font/appsubfont_r"
        android:includeFontPadding="false"
        android:id="@+id/detail_time_text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_time_text"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="@font/appmainfont_bold"
        android:includeFontPadding="false"
        android:layout_marginLeft="20dp"
        android:id="@+id/detail_title_text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/detail_title_text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:fontFamily="@font/appmainfont_medium"
        android:includeFontPadding="false"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/detail_sub_text"
        />




</androidx.constraintlayout.widget.ConstraintLayout>