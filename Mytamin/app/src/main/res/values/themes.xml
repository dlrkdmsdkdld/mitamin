<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mytamin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/background_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="Theme.Mytamin.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ovallogo</item>
        <item name="postSplashScreenTheme">@style/Theme.Mytamin</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
    </style>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@color/Gray</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="colorControlNormal">@color/transparent</item>
        <item name="boxBackgroundColor">@color/Gray</item>
    </style>

    <style name="TextInputLayoutStyle2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/textinputlayout_boxstroke</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="colorControlNormal">@color/background_gray</item>
        <item name="boxBackgroundColor">@color/background_gray</item>



    </style>


    <style name="custom_time_picker">
        <item name="fontFamily">@font/appsubfont_eb</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- ... -->
        <item name="colorPrimary">@color/semiGray</item>
        <item name="colorPrimaryDark">@color/semiGray</item>
        <item name="colorAccent">@color/background_white</item>
    </style>
    <style name="TextLabel">
        <item name="android:textSize">0sp</item>

    </style>
    <style name="hintTextSize" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:textSize">1sp</item>

    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>


</resources>