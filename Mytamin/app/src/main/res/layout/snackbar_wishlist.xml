<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_height="56dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="20dp"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_marginLeft="16dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/snackbar_image"
                android:background="@drawable/ic_icon_exclamation_circle_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/snackbar_delete"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/snackbar_image"
                android:fontFamily="@font/appmainfont_medium"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:id="@+id/snackbar_text"
                android:layout_marginLeft="8dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="95dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/snackbar_text"
                android:text="@string/snackbar_btn"
                android:textColor="@color/background_white"
                android:background="@drawable/round_layout_background_orange"
                android:textSize="16dp"
                android:padding="10dp"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/appmainfont_bold"
                android:includeFontPadding="false"
                android:id="@+id/snackbar_btn"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>