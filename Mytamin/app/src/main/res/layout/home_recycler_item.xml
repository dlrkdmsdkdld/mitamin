<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200sp"
    android:layout_height="200sp"
    android:background="@color/semiGray"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    >

    <TextView

        android:id="@+id/home_item_step_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"

        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="20sp"
        android:layout_margin="10sp"
        app:layout_constraintStart_toEndOf="@+id/home_item_step_text"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView

        android:id="@+id/home_item_state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="감각깨우기"
        android:textSize="20sp"
        android:layout_margin="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_item_step_text"

        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_item_btn"
        android:src="@drawable/ic_baseline_arrow_right_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>